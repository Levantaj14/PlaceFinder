<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Post a listing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="listingUploadScript.js"></script>
</head>

<body>

<%- include('partials/navbar.ejs', { login: loggedIn, username, pageName: 'postListing' })%>

<div class="container mt-3 mb-4">
    <%- include('partials/message.ejs', { alerting, message }) %>
    <h2>Post a listing</h2>
    <form action="/submitListing" method="post" id="uploadForm">
        <h5>Let's make your listing more personal</h5>
        <div class="mb-3 mt-3 row">
            <div class="col">
                <label class="form-label" for="title">Title</label>
                <input type="text" id="title" class="form-control" name="title" required>
                <div class="invalid-feedback">
                    This field is mandatory.
                </div>
            </div>
        </div>
        <div class="mb-3 mt-3 row">
            <div class="col">
                <label class="form-label" for="description">Description</label>
                <textarea id="description" class="form-control" name="description"></textarea>
            </div>
        </div>
        <hr>
        <h5>Essential information</h5>
        <div class="mb-3 mt-3 row">
            <div class="col">
                <label class="form-label" for="country">Country</label>
                <select id="country" class="form-select" name="country" required>
                    <% countries.forEach((country) => { %>
                        <option value="<%= country %>"><%= country %></option>
                    <% }) %>
                </select>
                <div class="invalid-feedback">
                    You must select a country.
                </div>
            </div>
            <div class="col">
                <label class="form-label" for="city">City</label>
                <select id="city" class="form-select" name="city" required>
                    <% cities.forEach((city) => { %>
                        <option value="<%= city %>"><%= city %></option>
                    <% }) %>
                </select>
                <div class="invalid-feedback">
                    This field is mandatory.
                </div>
            </div>
        </div>
        <div class="mb-3 mt-3 row">
            <div class="col">
                <label class="form-label" for="street">Street</label>
                <input type="text" id="street" class="form-control" name="street">
                <div class="invalid-feedback" id="streetError">
                    The street field must not be empty if the number field is filled in.
                </div>
            </div>
            <div class="col-sm-2">
                <label class="form-label" for="number">Number</label>
                <input type="number" id="number" class="form-control" name="number">
            </div>
        </div>
        <div class="mb-3 mt-3 row">
            <div class="col">
                <label class="form-label" for="district">District</label>
                <input type="text" id="district" class="form-control" name="district">
            </div>
            <div class="col-sm-4">
                <label class="form-label" for="roomNumber">Number of rooms</label>
                <input type="number" id="roomNumber" class="form-control" name="roomNumber">
            </div>
        </div>
        <div class="mb-3 mt-3 row">
            <div class="col">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <input type="number" id="price" class="form-control" name="price">
                    <span class="input-group-text">â‚¬</span>
                </div>
            </div>
            <div class="col">
                <label class="form-label" for="area">Area</label>
                <div class="input-group">
                    <input type="number" id="area" class="form-control" name="area">
                    <span class="input-group-text">m<sup>2</sup></span>
                </div>
            </div>
            <div class="col">
                <label class="form-label" for="dateOfAvailability">Date of availability</label>
                <input type="date" id="dateOfAvailability" class="form-control" name="dateOfAvailability" required>
                <div class="invalid-feedback">
                    This field is mandatory.
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" id="uploadButton">Post</button>
    </form>
</div>
</body>

</html>
