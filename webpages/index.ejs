<!DOCTYPE html>
<html lang="en">

<head>
    <title>PlaceFinder</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="/indexScript.js"></script>
</head>

<body>

<%- include('partials/navbar.ejs', { login: loggedIn, username, pageName: 'index' }) %>

<div class="container mt-3">
    <%- include('partials/message.ejs', { alerting, message }) %>
    <h2>Check out some listings</h2>
    <h5>Let's find your new home</h5>
    <form id="filterForm" action="/listings/filteredListings" method="post">
        <div class="mb-3 mt-3 row">
            <div class="col">
                <label class="form-label" for="city">City</label>
                <input type="text" id="city" class="form-control" name="city">
            </div>
            <div class="col">
                <label class="form-label" for="district">District</label>
                <input type="text" id="district" class="form-control" name="district">
            </div>
            <div class="col">
                <label class="form-label" for="minPrice">Minimum price</label>
                <input type="number" min="0" id="minPrice" class="form-control" name="minPrice">
            </div>
            <div class="col">
                <label class="form-label" for="maxPrice">Maximum price</label>
                <input type="number" min="0" id="maxPrice" class="form-control" name="maxPrice">
            </div>
        </div>
        <button type="submit" class="btn btn-primary" id="getListings">Filter</button>
    </form>
    <hr>
    <% if (listings.length === 0) { %>
        <h6 class="text-center">It looks like there is no listing.</h6>
    <% } else { %>
        <% listings.forEach((post) => { %>
            <div class="card">
                <div class="card-body">
                    <div id="<%= post._id; %>">
                        <h4 class="card-title"><%= post.title; %></h4>
                        <% if (post.street) { %>
                            <p class="card-text">Street: <%= post.street; %>, <%= post.number; %></p>
                        <% } %>
                        <% if (post.city === '-') { %>
                            <p class="card-text">Country: <%= post.country; %></p>
                        <% } else { %>
                            <p class="card-text">City: <%= post.city; %>, <%= post.country; %></p>
                        <% } %>
                    </div>
                    <a class="card-link dataGetting" data-info="<%= post._id; %>">Show more data</a>
                    <% if (post.user === username) { %>
                        <a href="/listings/showListing?id=<%= post._id %>" class="card-link">Edit your listing</a>
                    <% } else if (isAdmin === "true") { %>
                        <a href="/listings/showListing?id=<%= post._id %>" class="card-link">Edit this listing</a>
                    <% } else { %>
                        <a href="/listings/showListing?id=<%= post._id %>" class="card-link">Check it out</a>
                    <% } %>
                    <% if (post.user === username || isAdmin === "true") { %>
                        <a class="card-link" href="/listings/messages?id=<%= post._id %>">Messages</a>
                    <% } %>
                </div>
            </div>
            <br>
        <% }); %>
    <% } %>
    <%- include('partials/toastNotification.ejs') %>
</div>

</body>
</html>
