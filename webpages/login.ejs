<!DOCTYPE html>
<html lang="en">

<head>
    <title>Log in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="/loginScript.js"></script>
</head>

<body>

<%- include('partials/navbar.ejs', { login: false, username: '', pageName: 'login' }) %>

<div class="container mt-3 mb-4">

    <%- include('partials/message.ejs', { alerting, message }) %>

    <ul class="mb-3 nav justify-content-center nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#signup">Sign up</a>
        </li>
    </ul>

    <div class="tab-content">
        <div id="login" class="container tab-pane fade active show">
            <h2>Login</h2>
            <h5>Hi there! Good to see you again</h5>
            <form action="/account/loginUser" method="post" id="loginForm">
                <div class="mb-3 mt-3 row">
                    <div class="col">
                        <label class="form-label" for="username">Username</label>
                        <input type="text" id="loginUsername" class="form-control" name="username" required>
                        <div class="invalid-feedback">
                            This field is mandatory.
                        </div>
                    </div>
                    <div class="col">
                        <label class="form-label" for="password">Password</label>
                        <input type="password" id="loginPassword" class="form-control" name="password" required>
                        <div class="invalid-feedback">
                            This field is mandatory.
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" id="loginButton">Login</button>
            </form>
        </div>
        <div id="signup" class="container tab-pane fade">
            <h2>Sign up</h2>
            <h5>We're happy to see you join our community</h5>
            <form action="/account/signupUser" method="post" id="signUpForm">
                <div class="row">
                    <div class="col">
                        <label class="form-label" for="name">Enter your name</label>
                        <input type="text" id="name" class="form-control" name="name" required>
                        <div class="invalid-feedback">
                            This field is mandatory.
                        </div>
                    </div>
                </div>
                <div class="mb-3 mt-3 row">
                    <div class="col">
                        <label class="form-label" for="username">Write a unique username</label>
                        <div class="input-group">
                            <span class="input-group-text">@</span>
                            <input type="text" id="signUpUsername" class="form-control" name="username" required>
                            <div class="invalid-feedback">
                                This field is mandatory.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3 mt-3 row">
                    <div class="col">
                        <label class="form-label" for="signUpPassword">Enter password</label>
                        <input type="password" id="signUpPassword" class="form-control" name="password" minlength="8"
                               required>
                        <div id="passwordHelpBlock" class="form-text">
                            The password must be at least 8 characters long and must contain letters and numbers.
                        </div>
                        <div class="invalid-feedback" id="passwordError">
                            The password must be at least 8 characters long.
                        </div>
                    </div>
                    <div class="col">
                        <label class="form-label" for="passwordAgain">Please reenter your password</label>
                        <input type="password" id="passwordAgain" class="form-control" name="passwordAgain" required>
                        <div class="invalid-feedback" id="passwordAgainError">
                            This field is mandatory.
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" id="signUpButton">Sign up</button>
            </form>
        </div>
    </div>
</div>

</body>
</html>
