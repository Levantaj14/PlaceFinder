<!DOCTYPE html>
<html lang="en">

<head>
    <title>Messages about <%= listing.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="/messageScript.js"></script>
</head>

<body>

<%- include('partials/navbar.ejs', { login: loggedIn, username, pageName: 'interestedUsers' }) %>

<div class="container mt-3">
    <h2>Messages about <%= listing.title %></h2>
    <% if (listing.user === username) { %>
        <h5>Take a look at all the users interested in your listing</h5>
    <% } else { %>
        <h5>Take a look at all the users interested in this listing</h5>
    <% } %>
    <% if (interest.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Message</th>
                    <th>Phone number</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <% interest.forEach((message) => { %>
                    <tr id="<%= message._id %>-row">
                        <td><%= message.user %></td>
                        <td><%= message.message %></td>
                        <td><%= message.contact %></td>
                        <td>
                            <button type="button" class="btn btn-outline-danger btn-sm" data-id="<%= message._id %>"
                                    data-listingID="<%= listing._id %>">
                                Delete message
                            </button>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <% if (listing.user === username) { %>
            <h6 class="text-center mt-4">It looks like there is no interest in your listing, yet.</h6>
        <% } else { %>
            <h6 class="text-center mt-4">It looks like there is no interest in this listing.</h6>
        <% } %>
    <% } %>
    <%- include('partials/toastNotification.ejs') %>
</div>

</body>
</html>
